<h1 class="pb-4">Explore Categories</h1>
<!-- row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 -->

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">Explore Category</li>
    </ol>
</nav>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 py-4 mb-4">

    <% if(typeof categories != 'undefined' && categories.length>0) { %>
        <% categories.forEach(function(category, index) { %>
            <div class="category_each" style="margin-bottom: 20px;">
            <a href="/categories/<%=category.name%>" class="col text-center category_link">
                <div class="category_img shadow">
                    <img src="img/<%=category.image  %>" alt=<%= category.name %> loading="lazy">
                </div>
                <div class="pt-1" style="margin-top: 20px;"><%= category.name %> </div>
            </a>

            </div>
        <% }) %>
    <% } %>
</div>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 py-4 mb-4">

    <% if(typeof categoryID != 'undefined' && categoryID.length>0) { %>
        <% categoryID.forEach(function(category, index) { %>
            <div class="category_each" style="margin-bottom: 20px;">
            <a href="/recipe/<%=category._id%>" class="col text-center category_link">
                <div class="category_img shadow">
                    <img src="img/<%=category.image  %>" alt=<%= category.name %> loading="lazy">
                </div>
                <div class="pt-1" style="margin-top: 20px;"><%= category.name %> </div>
            </a>

            </div>
        <% }) %>
    <% } %>
</div>